<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Detail">

    <TextView
        android:id="@+id/userId_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:ignore="MissingConstraints"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/id_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:ignore="MissingConstraints"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="@id/userId_txt"/>

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:ignore="MissingConstraints"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="@+id/id_txt"/>

    <TextView
        android:id="@+id/body_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:ignore="MissingConstraints"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="@id/title_txt"/>

    <Button
        android:id="@+id/comment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        tools:ignore="MissingConstraints"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="@id/body_txt"/>
</androidx.constraintlayout.widget.ConstraintLayout>

